{
  "manifest_version": 3,
  "name": "Outlook Tasks Auto-Open",
  "version": "1.0",
  "description": "Automatically opens the Tasks panel in Outlook Online.",
  "icons": {
    "48": "todo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://outlook.office.com/mail/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["activeTab"]
}