{
  "manifest_version": 2,
  "name": "Paged.js Activator",
  "version": "1.0",
  "description": "Activate Paged.js on any webpage",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_title": "Activate Paged.js"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "196": "pagedjs.png"
  }
}
